<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectbengkel.projectbengkel.accountinfo"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="386dp"
        android:layout_height="585dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bg_img"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageView
        android:id="@+id/header"
        android:layout_width="383dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="@+id/lrg_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/header_img"
        android:layout_marginBottom="142dp"
        app:layout_constraintHorizontal_bias="0.6"
        tools:layout_editor_absoluteX="-1dp" />

    <ImageView
        android:id="@+id/sml_profile"
        android:layout_width="52dp"
        android:layout_height="47dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/customer_pictures"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="18dp" />

    <ImageView
        android:id="@+id/lrg_profile"
        android:layout_width="130dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toTopOf="@id/txt_cust_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/profile_img"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="77dp" />

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/backarrow_img"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="35dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="@id/lrg_profile"
        app:layout_constraintRight_toRightOf="@id/lrg_profile"
        app:srcCompat="@drawable/edit_img"
        tools:layout_editor_absoluteY="169dp"
        tools:layout_editor_absoluteX="215dp" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="35dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/lrg_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/phone_img"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/mail"
        android:layout_width="35dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/mail_img"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="7dp" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="35dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/mail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/location_img"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/acc_info_button"
        android:layout_width="148dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@id/txt_cust_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/acc_info_img"
        android:layout_marginTop="87dp" />

    <TextView
        android:id="@+id/txt_cust_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cust_name"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/lrg_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/txt_cust_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cust_phone"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/lrg_profile"
        app:layout_constraintLeft_toRightOf="@id/phone"
        android:layout_marginTop="179dp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/txt_cust_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cust_mail"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt_cust_phone"
        app:layout_constraintLeft_toRightOf="@id/mail"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/txt_cust_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cust_address"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt_cust_mail"
        app:layout_constraintLeft_toRightOf="@id/location"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/txt_acc_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acc_info"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="543dp" />


</android.support.constraint.ConstraintLayout>
