<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectbengkel.projectbengkel.accountinfo"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_img"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header_img" />

    <ImageView
        android:id="@+id/sml_profile"
        android:layout_width="52dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/customer_pictures"
        app:layout_constraintTop_toTopOf="@+id/imageView16"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="@+id/imageView16" />

    <ImageView
        android:id="@+id/lrg_profile"
        android:layout_width="130dp"
        android:layout_height="137dp"
        app:srcCompat="@drawable/profile_img"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/backarrow_img"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="@+id/lrg_profile" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="35dp"
        android:layout_height="37dp"
        app:srcCompat="@drawable/edit_img"
        app:layout_constraintBottom_toBottomOf="@+id/lrg_profile"
        app:layout_constraintRight_toRightOf="@+id/lrg_profile" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="35dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/phone_img"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_cust_name"
        android:layout_marginStart="46dp" />

    <ImageView
        android:id="@+id/mail"
        android:layout_width="35dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/mail_img"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintLeft_toLeftOf="@+id/phone" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="35dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/location_img"
        app:layout_constraintTop_toBottomOf="@+id/mail"
        app:layout_constraintLeft_toLeftOf="@+id/mail" />

    <ImageView
        android:id="@+id/acc_info_btn"
        android:layout_width="132dp"
        android:layout_height="93dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/acc_info_img" />

    <TextView
        android:id="@+id/txt_cust_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cust_name"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lrg_profile"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/lrg_profile"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/lrg_profile"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/txt_cust_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="199dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:text="@string/cust_phone"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/phone"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/txt_cust_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cust_mail"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/mail"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/mail"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/mail"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/txt_cust_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cust_address"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/location"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/location"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/txt_acc_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acc_info"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/acc_info_btn"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/acc_info_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/acc_info_btn" />


</android.support.constraint.ConstraintLayout>
