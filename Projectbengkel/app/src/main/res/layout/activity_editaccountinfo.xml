<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    tools:context="com.projectbengkel.projectbengkel.editaccountinfo"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/button"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:background="@drawable/backarrow_img"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header_editakun" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/cust_name"
        android:hint="Customer Name"
        android:paddingLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/phone"
        android:hint="Phone Number"
        android:paddingLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editText" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/email"
        android:hint="E-mail"
        android:paddingLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editText2"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/address"
        android:hint="Address"
        android:paddingLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/editText4"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editText4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:background="@drawable/save_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText6"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/editText6"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/editText6" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="197dp"
        android:layout_height="97dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/icon2"
        app:layout_constraintHorizontal_bias="0.502" />

</android.support.constraint.ConstraintLayout>
